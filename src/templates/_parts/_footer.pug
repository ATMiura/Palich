					+footer-nav__item('Пицца')
		.footer-right
			.footer-contact
				form.form.form-subscribe
					.footer-heading Подписаться на рассылку
					.form_row
						.form_group
							label.form_label.subscribe_label
								input.form_input.subscribe_inp(type="email", name="subscribe_input_email", id="subscribe_input_email", placeholder="E-mail")
								input.form_input.button.button__arrow.button__arrow__red.inline.subscribe_btn(type="submit", value="")

					.form_row
						.form_group
							label.form_label.checkbox__label
								input.checkbox__input(type="checkbox", name="subscribe_checkbox", id="subscribe_checkbox", checked="checked")
								.checkbox__emulator
								.checkbox__text
									span Даю согласие на обработку
									=" "
									a(href="", target="_blank") персональных данных

				a.footer-contact__tel(href="tel:+7 999 999 99 99 ") +7 999 999 99 99
				a(href="").link-icon.footer-contact__link
					.link-icon__icon
						+icon('phone')
					.link-icon__text Позвоните нам
				a(href="").link-icon.footer-contact__link
					.link-icon__icon
						+icon('mail')
					.link-icon__text Письмо Палычу


