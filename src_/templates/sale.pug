extends _layouts/_base

append vars
	-
		var title = 'Акция'

block content
	section.section
		.section-container
			.breadcrumbs
				ul.breadcrumbs__list
					li.breadcrumbs__item
						a.breadcrumbs__link(href="#") Главная
					li.breadcrumbs__item
						span Акции

	section.section-sale
		.section-container
			.section-content
				.sale
					.sale-header
						.sale-header__text
							.sale-header__title
								h1 Розыгрыш сертификата на любые покупки
							.sale-header__date
								h3 Акция действует с 8.03 по 29.03
						.sale-header__img
							img(src="images/sale-img.jpg")
					.sale-main
						.sale-descr
							h3 Друзья, мы снова решили устроить розыгрыш для Вас!
							p &nbsp;
							p На этот раз разыграем подарочный сертификат на 1000 рублей на покупки в наших магазинах. Сертификат действует на покупки в наших розничных магазинах на Волкова, 19 и Станиславского, 14, а так же в интернет-магазине Кондитер-Ростов.рф.
						.sale-rules
							.sale-rules__title
								h4 Правила участия в розыгрыше очень просты:
							.sale-rules__list
								ul
									li Вы приобретаете на нашем сайте Кондитер-Ростов.рф, или в наших магазинах на Волкова, 19 и Станиславского, 14 любые товары
									li Готовите сладости, используя нашу продукцию
								ul
									li Вы приобретаете на нашем сайте Кондитер-Ростов.рф, или в наших магазинах на Волкова, 19 и Станиславского, 14 любые товары
									li Готовите сладости, используя нашу продукцию
						.post
							blockquote На этот раз разыграем подарочный сертификат на 1000 рублей на покупки в наших магазинах. Сертификат действует на покупки в наших розничных магазинах на Волкова, 19 и Станиславского, 14, а так же в интернет-магазине Кондитер-Ростов.рф

	section.section.products-slider
		.section-container
			.section-header
				.section-title
					h2.h1 В акции учавствуют
				.swiper-button.inline
					.swiper-button-prev
					.swiper-button-next
			.section-content
				.products__list.swiper-container(data-slider-name="slider-like")
					.swiper-wrapper
						.swiper-slide
							+products__item('products__item__slide__img_1','Пельмени с индейкой','Классические пельмени, которые мы готовим уже более 25 лет. Тонкое тесто и сытное мясо',true,false)
						.swiper-slide
							+products__item('products__item__slide__img_2','Торт Прага','Кофе «Арабика», вареная сгущенка   и вкуснейшие домашние блины',false, false)
						.swiper-slide
							+products__item('products__item__slide__img_3','Торт Ореховый по-королевски','Бисквитные коржи с творожным муссом. Свежий лайм и апельсин',false,false)
						.swiper-slide
							+products__item('products__item__slide__img_4','Торт малиновый','Кофе «Арабика», вареная сгущенка   и вкуснейшие домашние блины',true,false)
						.swiper-slide
							+products__item('products__item__slide__img_1','Пельмени с индейкой','Классические пельмени, которые мы готовим уже более 25 лет. Тонкое тесто и сытное мясо',true,false)
						.swiper-slide
							+products__item('products__item__slide__img_2','Торт Прага','Кофе «Арабика», вареная сгущенка   и вкуснейшие домашние блины',false, false)
						.swiper-slide
							+products__item('products__item__slide__img_3','Торт Ореховый по-королевски','Бисквитные коржи с творожным муссом. Свежий лайм и апельсин',false,false)
						.swiper-slide
							+products__item('products__item__slide__img_4','Торт малиновый','Кофе «Арабика», вареная сгущенка   и вкуснейшие домашние блины',true,false)
					.swiper-scrollbar

	section.section.section-news
		.section-container
			.section-header
				.section-title
					h2.h1 Другие акции
				.section-more
					a(href="").more-link Посмотреть все акции
						+icon('arrow-more')
			.section-content
				.news
					.news-list.scroll.scroll-x
						.news-item
							.news-item__header
								a(href="#").news-item__link
									img(src="images/news-item__img_1.jpg").news-item__img
							.news-item__body
								h3.news-item__name В ассортименте нашей торговой сети появились новые блюда
								.news-item__excerpt У нас хорошие новости для любителей позднего завтрака!
							.news-item__footer
								.news-item__date 5 мая
						.news-item
							.news-item__header
								a(href="#").news-item__link
									img(src="images/news-item__img_2.jpg").news-item__img
							.news-item__body
								h3.news-item__name В день рождения нашей сети мы проводим специальную акцию
								.news-item__excerpt Мы решили порадовать своих любимых покупателей в честь дня рождения нашей сети и запустили акцию «Игристые среды»
							.news-item__footer
								.news-item__date 27 апреля
						.news-item
							.news-item__header
								a(href="#").news-item__link
									img(src="images/news-item__img_3.jpg").news-item__img
							.news-item__body
								h3.news-item__name Праздник светлой пасхи
								.news-item__excerpt Великий пост подходит к концу, и близится светлый праздник Пасхи! Наша компания «У Пылача» предлагает вниманию...
							.news-item__footer
								.news-item__date 14 апреля
