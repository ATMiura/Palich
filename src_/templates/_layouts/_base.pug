include ../_mixins/_import

block vars
	-
		var title = typeof title !== 'undefined' ? title : null
	-
		var html = {
			attrs: {
				lang: 'ru'
			},
			classList: []
		}
	-
		var body = {
			attrs: {},
			classList: []
		}
	-
		var cartEmpty = true
	-
		var isAuth = false

doctype html
html(class=html.classList)&attributes(html.attrs)
	head
		meta(charset="utf-8")

		if title !== null
			title= title

		include ../_parts/_head

	body(data-color="#E85F27")

		include ../_parts/_header

		main.main
			block content

		include ../_parts/_footer



		block scripts
			script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
			script(src="//api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript")
			script(src=`js/vendor.js?v=${Date.now()}`)
			script(src=`js/main.js?v=${Date.now()}`)
